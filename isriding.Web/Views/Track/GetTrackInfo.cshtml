@model isriding.Web.Models.SchoolManage.TrackModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="tabbable tabbable-custom tabbable-full-width">
    @*<ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1" data-toggle="tab">基本信息</a>
            </li>
        </ul>*@
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">用户名称</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.User_Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">自行车编号</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Ble_name, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">开始桩点</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Start_site_name, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">开始GPS</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Start_point, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">开始时间</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Start_time, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">结束桩点</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.End_site_name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">结束GPS</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.End_point, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">结束时间</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.End_time, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">支付状态</label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.Pay_status, Model.Search.PayStatusList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">订单编号</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Pay_docno, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">支付方式</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Pay_method, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">支付金额</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Payment, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">支付宝编号</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Trade_no, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">评论</label>
                    <div class="col-md-6">
                        @Html.TextAreaFor(t => t.Remark, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>