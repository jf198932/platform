
@using isriding.Web.Models.Common
@model isriding.Web.Models.Authen.BackUserModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="tabbable tabbable-custom tabbable-full-width">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#tab_1" data-toggle="tab">基本信息</a>
        </li>
        <li>
            <a href="#tab_2" data-toggle="tab">角色</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">登录名</label>
                    <div class="col-md-6">
                        @if (Model.Id == 0)
                        {
                            @Html.TextBoxFor(t => t.LoginName, new {@class = "form-control"})
                        }
                        else
                        {
                            @Html.TextBoxFor(t => t.LoginName, new {@class = "form-control disabled"})
                        }
                        <span class="help-block">
                            @Html.ValidationMessageFor(t => t.LoginName)
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">全名</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.FullName, new {@class = "form-control"})
                        <span class="help-block">
                            @Html.ValidationMessageFor(t => t.FullName)
                        </span>
                    </div>
                </div>
                @*<div class="form-group">
                    <label class="control-label col-md-3">校园</label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.School_id, Model.SchoolList, new { @class = "form-control" })
                    </div>
                </div>*@
                <div class="form-group">
                    <label class="control-label col-md-3">邮箱</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Email, new {@class = "form-control"})
                        <span class="help-block">
                            @Html.ValidationMessageFor(t => t.Email)
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">电话</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Phone, new {@class = "form-control"})
                        <span class="help-block">
                            @Html.ValidationMessageFor(t => t.Phone)
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">启用</label>
                    <div class="col-md-6">
                        <div class="checkbox-list">
                            <label class="checkbox-inline">

                                @Html.CheckBoxFor(t => t.Enabled)

                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="tab-pane" id="tab_2">
            @Html.CheckBoxListFor(t => t.SelectedRoleList, DisplayDirection.Horizon, new { style = "display:inline-block;width:500px;margin:0 10px;" }, new { style = "display:inline-block;" })
        </div>
    </div>
</div>
