@using Abp.Extensions
@model isriding.Web.Models.SchoolManage.TroubleModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="tabbable tabbable-custom tabbable-full-width">
    @*<ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1" data-toggle="tab">基本信息</a>
            </li>
        </ul>*@
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">单号</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.Id, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">时间</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.create_time, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">会员名称</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.username, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">校园</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.schoolname, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">电话</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.phone, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">车辆编号</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.bike_number, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">车辆损坏</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.trouble1, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">用车故障</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.trouble2, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">违规用车</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.trouble3, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">备注</label>
                    <div class="col-md-6">
                        @Html.DisplayFor(t => t.comments, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">核实情况</label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.verify_status, Model.VerifyStatusList, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">处理情况</label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.deal_status, Model.DealStatusList, new {@class = "form-control"})
                    </div>
                </div>
                @if (!Model.img_url.IsNullOrEmpty())
                {
                    <div class="form-group">
                        <label class="control-label col-md-3">证件照</label>
                        <div class="col-md-6">
                            <img src="@Model.img_url" alt="证件照" width="420" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
