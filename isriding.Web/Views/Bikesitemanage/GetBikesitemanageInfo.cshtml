@model isriding.Web.Models.SchoolManage.BikesitemanageModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="tabbable tabbable-custom tabbable-full-width">
    @*<ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1" data-toggle="tab">基本信息</a>
            </li>
        </ul>*@
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">学校</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.School, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">停车港</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Name, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">类型</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Type_name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">车辆数量</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Bike_count, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">可用数量</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Available_count, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">描述信息</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(t => t.Description, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>